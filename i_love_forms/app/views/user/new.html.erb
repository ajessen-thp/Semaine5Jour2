    <!--------------------------------------------->
    <!--          Troisième formulaire           -->
    <!--------------------------------------------->

    <%= form_for :user, url: {action: "create"}, html: {class: "border rounded p-3 col-6 shadow"} do |f| %>
      <% unless flash.alert == nil %>
        <% unless flash[:alert]["post"] == nil %>
          <div class="alert alert-danger">
            <%= flash[:alert]["post"]%>
          </div>
        <% end %>
      <% end %>
      <% unless flash.alert == nil %>
        <% unless flash[:alert]["username"] == nil %>
          <div class="alert alert-danger">
            <%= flash[:alert]["username"]%>
          </div>
        <% end %>
      <% end %>
      <div class="form-group">
        <label for="username">Username</label>
        <%= f.text_field :username, class: "form-control", placeholder: "User" %>
      </div>
      <% unless flash.alert == nil %>
        <% unless flash[:alert]["email"] == nil %>
          <div class="alert alert-danger">
            <%= flash[:alert]["email"]%>
          </div>
        <% end %>
      <% end %>
      <div class="form-group">
        <label for="email">Email</label>
        <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
      </div>
      <% unless flash.alert == nil %>
        <% unless flash[:alert]["bio"] == nil %>
          <div class="alert alert-danger">
            <%= flash[:alert]["bio"]%>
          </div>
        <% end %>
      <% end %>
      <div class="form-group">
        <label for="bio">Bio</label>
        <%= f.text_area :bio, class: "form-control", rows: 3%>
      </div>
      <%= f.submit "Add User", class: "btn btn-dark col-12" %>
    <% end %>
  </div>
</div>
